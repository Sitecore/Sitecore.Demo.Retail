@using Sitecore.Feature.Commerce.Catalog.Models
@using Sitecore.Foundation.Commerce.Extensions
@model Sitecore.Feature.Commerce.Catalog.Models.SearchResultViewModel
@{
    if (Model?.Items == null || !Model.Items.Any())
    {
        <div class="alert alert-info" role="alert">
            @Html.Sitecore().Text("/Catalog/Product Search Results/No Results", $"Your search returned no results. Please try again using more general terms.")
        </div>
        return;
    }
}

<div id="C05-ProductList" class="row">
    @foreach (var item in Model.Items)
    {
        <div class="col-sm-4 col-xs-12">
            @if (item is ProductViewModel)
            {
                @Html.Partial("~/views/Catalog/_ProductSummary.cshtml", (ProductViewModel)item)
            }
            else if (item is CategoryViewModel)
            {
                @Html.Partial("~/views/Catalog/_CategorySummary.cshtml", (CategoryViewModel)item)
            }
        </div>
    }
</div>