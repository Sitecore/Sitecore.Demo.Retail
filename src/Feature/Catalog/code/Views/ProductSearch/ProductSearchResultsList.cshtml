@using Sitecore.Feature.Commerce.Catalog.Models
@model Sitecore.Feature.Commerce.Catalog.Models.SearchResultViewModel
@{
    if (Model?.Items == null || !Model.Items.Any())
    {
        return;
    }
}

<ul class="list-unstyled list-divided">
    @foreach (var item in Model.Items)
    {
        <li>
            @if (item is ProductViewModel)
            {
                @Html.Partial("_ProductSearchResultDetails", (ProductViewModel)item)
            }
            else if (item is CategoryViewModel)
            {
                @Html.Partial("_CategorySearchResultDetails", (CategoryViewModel)item)
            }
        </li>
    }
</ul>
