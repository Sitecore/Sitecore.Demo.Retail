<div class="headline text-center">
    <a id="CheckBalance"></a>
    <h2>
        @Html.Sitecore().Field("Check Your Card Balance Label", Html.Sitecore().CurrentItem)
    </h2>
</div>

<div class="row">
    <div class="col-md-4 col-md-offset-4 col-xs-12">
        <div class="input-group">
            <input type="text" class="form-control" id="GiftCardId" name="GiftCardId" placeholder="@Html.Sitecore().Field("Check Balance Label", Html.Sitecore().CurrentItem)">
            <span class="input-group-btn">
                <button id="CheckGiftCardBalanceButton" type="button" class="btn btn-primary" data-loading-text="@Html.Sitecore().Field("Checking Card  Balance Label", Html.Sitecore().CurrentItem)" onclick="CheckGiftCardBalance();" disabled="disabled">@Html.Sitecore().Field("Check Button", Html.Sitecore().CurrentItem)</button>
            </span>
        </div>
        <div class="balance-value">
            <h5 id="balance-value"></h5>
        </div>
    </div>
</div>
