<div class="row">
    <div class="col-md-4 col-md-offset-4 col-xs-12">
        <div class="input-group">
            <input type="text" class="form-control" id="GiftCardId" name="GiftCardId" placeholder="@Html.Sitecore().Text("/Catalog/Check Gift Card Balance/Enter Gift Card Number", "Enter gift card number")">
            <span class="input-group-btn">
                <button id="CheckGiftCardBalanceButton" type="button" class="btn btn-primary" data-loading-text="@Html.Sitecore().Text("/Catalog/Check Gift Card Balance/Checking", "Checking...")" onclick="CheckGiftCardBalance();" disabled="disabled">
                    @Html.Sitecore().Text("/Catalog/Check Gift Card Balance/Check", "Check balance")
                </button>
            </span>
        </div>
        <div class="balance-value">
            <h5 id="balance-value"></h5>
        </div>
    </div>
</div>
