@using Sitecore.Commerce.Connect.CommerceServer
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Demo.Retail.Feature.Catalog.Website.Models.ProductViewModel
@{
    if (Model == null)
    {
        return;
    }
}

@using (Html.BeginEditFrame(Model.Item.Paths.FullPath, CommerceConstants.KnownItemPaths.EditFrameImages))
{
    <div class="product-image-container">
        <div class="row">
            <div class="col-md-12 prod-img">
                <img src="@(Model.DefaultImage?.ImageUrl(770, 625))" class="img-responsive prod-large-view" alt="a"/>
            </div>
        </div>
        @if (Model.Images != null && Model.Images.Count > 1)
        {
            <div class="row thumbnails">
                @foreach (var mediaItem in Model.Images)
                {
                    <div class="col-md-3 col-sm-3 col-xs-4">
                        <a class="thumbnail" href="@(mediaItem?.ImageUrl(770, 625))">
                            <img src="@(mediaItem?.ImageUrl(770 / 4, 625 / 4))" class="img-responsive" alt="a"/>
                        </a>
                    </div>
                }
            </div>
        }
    </div>
}            