@using Sitecore.Demo.Retail.Feature.Catalog.Website.Models
@model CategoryViewModel
@{
    if (Model == null || Model.ChildProducts == null || !Model.ChildProducts.Any())
    {
        return;
    }
}

<div id="C05-ProductList" class="product-list row">
    @foreach (ProductViewModel product in Model.ChildProducts)
    {
        <div class="col-sm-4 col-xs-12 product-item">
            @Html.Partial("_ProductSummary", product)
        </div>
    }
</div>