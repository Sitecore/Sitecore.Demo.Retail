@{
    var email = string.IsNullOrEmpty(Sitecore.Context.User.Profile.Email) ? Sitecore.Context.User.Name : Sitecore.Context.User.Profile.Email;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h2 class="panel-title">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span> @Html.Sitecore().Text("/Customers/Profile/Account Profile", "Account Profile") 
        </h2>
    </div>
    <div class="panel-body">
        <p>
            <a href="@("/accountmanagement/EditProfile")">@email</a>
        </p>
        <a href="@("/accountmanagement/EditProfile")" class="btn btn-default">
            @Html.Sitecore().Text("/Customers/Profile/View Details", "View Details")  <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        </a>
        <a class="btn btn-default" href="@("/accountmanagement/ChangePassword")">
            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> @Html.Sitecore().Text("/Customers/Profile/Change Password", "Change Password") 
        </a>
    </div>
</div>
