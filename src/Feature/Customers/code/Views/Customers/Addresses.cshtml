@using Sitecore.Foundation.Dictionary.Repositories;
@{
    var savingLabel = Html.Sitecore().CurrentItem["Saving Label"];
    var deletingLabel = Html.Sitecore().CurrentItem["Deleting Label"];
    var selectLabel = Html.Sitecore().CurrentItem["Select Label"];
    var newAddresLabel = Html.Sitecore().CurrentItem["New Address Label"];
    var deleteButtonLabel = Html.Sitecore().Field("Delete Address Button", Html.Sitecore().CurrentItem);
    var deleteButtonLabelText = Html.Sitecore().CurrentItem["Delete Address Button"];
    var requiredFieldMessage = DictionaryPhraseRepository.Current.Get("/Customers/Addresses/Required Field", "This field is required.");
}

<div class="row" id="addressesSection">
    <div class="col-md-12 m-b-1">
        <div class="col-md-4">
            <div class="form-group">
                <label for="addressBookChange">@Html.Sitecore().Field("Change Address Label", Html.Sitecore().CurrentItem)</label>
                <select id="addressBookChange" class="form-control" data-bind='options: addresses(), optionsValue : "externalId", optionsText: "fullAddress", optionsCaption: "@newAddresLabel", value: selectedAddress'></select>
            </div>
        </div>
    </div>
    <div class="col-md-12" data-bind="with: address" id="addressContainer">
        <div class="col-md-4">
            <div class="form-group">
                <label for="addressBook-Name">
                    @Html.Sitecore().Field("Name Label", Html.Sitecore().CurrentItem)<span class="required">*</span>
                </label>
                <input type="text" class="form-control" id="addressBook-Name" placeholder="@Html.Sitecore().CurrentItem["Name Label"]" data-bind="text: name, value: name" required>
            </div>
            <div class="form-group">
                <label for="addressBook-City">
                    @Html.Sitecore().Field("City Label", Html.Sitecore().CurrentItem)<span class="required">*</span>
                </label>
                <input type="text" class="form-control" id="addressBook-City" placeholder="@Html.Sitecore().CurrentItem["City Label"]" data-bind="text: city, value: city" required>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="addressBook-Country">
                    @Html.Sitecore().Field("Country Label", Html.Sitecore().CurrentItem) <span class="required">*</span>
                </label>
                <select id="addressBook-Country" class="form-control" data-bind='options: $root.countries(), optionsValue: "code", optionsText: "name", optionsCaption: "@selectLabel", value: country' required></select>
            </div>
            <div class="form-group">
                <label for="addressBook-Region">
                    @Html.Sitecore().Field("State Label", Html.Sitecore().CurrentItem)<span class="required">*</span>
                </label>
                @*<select id="addressBook-Region" class="form-control" data-bind='options: regions(), optionsValue: "code", optionsText: "name", value: Region'></select>*@
                <input type="text" class="form-control" id="addressBook-Region" placeholder="@Html.Sitecore().CurrentItem["State Label"]" data-bind="text: region, value: region" required>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="addressBook-Address">
                    @Html.Sitecore().Field("Address Label", Html.Sitecore().CurrentItem)<span class="required">*</span>
                </label>
                <input type="text" class="form-control" id="addressBook-Address" placeholder="@Html.Sitecore().CurrentItem["Address Label"]" data-bind="text: address1, value: address1" required>
            </div>
            <div class="form-group">
                <label for="addressBook-Zipcode">
                    @Html.Sitecore().Field("Zip Code Label", Html.Sitecore().CurrentItem)<span class="required">*</span>
                </label>
                <input type="text" class="form-control" id="addressBook-Zipcode" placeholder="@Html.Sitecore().CurrentItem["Zip Code Label"]" data-bind="text: zipPostalCode, value: zipPostalCode" required>
            </div>
        </div>
        <div class="col-md-12">
            <div class="checkbox">
                <label>
                    <input type="checkbox" data-bind="checked: isPrimary"> @Html.Sitecore().Field("Set As Primary Label", Html.Sitecore().CurrentItem)
                </label>
            </div>
        </div>
    </div>
    <div class="col-md-12 m-t-1">
        <button type="button" id="saveAddress" class="btn btn-primary" data-bind="click: saveAddress, enable: enableSave" data-loading-text="@savingLabel">
            @Html.Sitecore().Field("Save Changes Button", Html.Sitecore().CurrentItem)
        </button>
        <a type="button" id="cancelChanges" class="btn btn-default" href="@("/accountmanagement")">
            @Html.Sitecore().Field("Cancel Button", Html.Sitecore().CurrentItem)
        </a>
        <button type="button" id="deleteAddress" class="btn btn-default m-l-1" data-bind="click: deleteAddress, enable: enableDelete" data-loading-text="@deletingLabel" data-text="@deleteButtonLabelText">
            <span class="glyphicon glyphicon-remove"></span> @deleteButtonLabel
        </button>
    </div>
</div>

    <script type="text/javascript">
        ko.validation.localize({ required: '@requiredFieldMessage' });
        initAddressList("addressesSection");
    </script>
