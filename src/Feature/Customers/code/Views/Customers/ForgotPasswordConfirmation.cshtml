<div class="form-group">
    <p class="help-block">
        @Html.Sitecore().Field("Fill Form Message", Html.Sitecore().CurrentItem)
    </p>
    <label for="Email">@Html.Sitecore().Field("Email", Html.Sitecore().CurrentItem) <span class="required">*</span> </label>
    <input id="Email" class="form-control" type="input" readonly="readonly" value="@ViewBag.UserName" name="Email">
</div>
<div class="row">
    <div class="col-lg-6">
        <a class="btn btn-primary btn-lg btn-block" href="/">
            <span class="glyphicon glyphicon-chevron-left"></span> @Html.Sitecore().Field("Back To Shopping Button", Html.Sitecore().CurrentItem)
        </a>
    </div>
</div>
