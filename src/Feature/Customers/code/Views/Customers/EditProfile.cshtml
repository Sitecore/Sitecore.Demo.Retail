@model Sitecore.Foundation.Commerce.Models.ProfileModel

@using (Ajax.BeginForm("UpdateProfile", "Customers", null, new AjaxOptions {OnBegin = "SetSavingProfileButton", OnSuccess = "UpdateProfileSuccess", OnFailure = "UpdateProfileFailure", HttpMethod = "Post"}, new {id = "UpdateProfileForm"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div id="" class="row">
        <div class="col-md-12">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="FirstName">
                        @Html.Sitecore().Field("First Name", Html.Sitecore().CurrentItem) <span class="required">*</span>
                    </label>

                    @Html.TextBoxFor(m => m.FirstName, new
                    {
                        placeholder = Html.Sitecore().CurrentItem["First Name Placeholder"],
                        data_val_required = Html.Sitecore().Field("First Name Required Message", Html.Sitecore().CurrentItem),
                        @class = "form-control"
                    })

                    @Html.ValidationMessageFor(m => m.FirstName)

                </div>
                <div class="form-group">
                    <label for="LastName">
                        @Html.Sitecore().Field("Surname", Html.Sitecore().CurrentItem) <span class="required">*</span>
                    </label>
                    @Html.TextBoxFor(m => m.LastName, new
                    {
                        placeholder = Html.Sitecore().CurrentItem["Last Name Placeholder"],
                        data_val_required = Html.Sitecore().Field("Last Name Required Message", Html.Sitecore().CurrentItem),
                        @class = "form-control"
                    })

                    @Html.ValidationMessageFor(m => m.LastName)
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="Email">
                        @Html.Sitecore().Field("Email", Html.Sitecore().CurrentItem) <span class="required">*</span>
                    </label>
                    @Html.TextBoxFor(m => m.Email, new
                    {
                        placeholder = Html.Sitecore().CurrentItem["Email Placeholder"],
                        data_val_required = Html.Sitecore().Field("Email Required Message", Html.Sitecore().CurrentItem),
                        @class = "form-control"
                    })

                    @Html.ValidationMessageFor(m => m.Email)
                </div>
                <div class="form-group">
                    <label for="EmailRepeat">
                        @Html.Sitecore().Field("Repeat Email", Html.Sitecore().CurrentItem) <span class="required">*</span>
                    </label>
                    @Html.TextBoxFor(m => m.EmailRepeat, new
                    {
                        placeholder = Html.Sitecore().CurrentItem["Email Placeholder"],
                        data_val_required = Html.Sitecore().Field("Email Required Message", Html.Sitecore().CurrentItem),
                        @class = "form-control"
                    })

                    @Html.ValidationMessageFor(m => m.EmailRepeat)
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label for="TelephoneNumber">
                        @Html.Sitecore().Field("Telephone Number", Html.Sitecore().CurrentItem)<span class="required">*</span>
                    </label>
                    @Html.TextBoxFor(m => m.TelephoneNumber, new
                    {
                        placeholder = Html.Sitecore().CurrentItem["Telephone Number Placeholder"],
                        data_val_required = Html.Sitecore().Field("Telephone Number Required Message", Html.Sitecore().CurrentItem),
                        @class = "form-control"
                    })

                    @Html.ValidationMessageFor(m => m.TelephoneNumber)
                </div>
            </div>
            <div class="col-md-12 m-t-1">
                <input type="submit" data-loading-text="@Html.Sitecore().Field("Saving Changes Button", Html.Sitecore().CurrentItem)" value="@Html.Sitecore().Field("Save Changes Button", Html.Sitecore().CurrentItem)" class="btn btn-primary" id="saveProfileChangesButton"/>
                <a type="button" href="@("/accountmanagement")" class="btn btn-default">@Html.Sitecore().Field("Cancel Button", Html.Sitecore().CurrentItem)</a>
            </div>
        </div>
    </div>
}