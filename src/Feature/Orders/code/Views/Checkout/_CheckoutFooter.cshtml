@using Sitecore.Foundation.Commerce.Managers;
@{
    var continueShoppingLabel = Html.Sitecore().Field("PrevButtonLabel", Html.Sitecore().CurrentItem.Children["Delivery"]);
    var backToDelivery = Html.Sitecore().Field("PrevButtonLabel", Html.Sitecore().CurrentItem.Children["Billing"]);
    var backToBilling = Html.Sitecore().Field("PrevButtonLabel", Html.Sitecore().CurrentItem.Children["Confirm"]);

    var toBillingLabel = Html.Sitecore().Field("NextButtonLabel", Html.Sitecore().CurrentItem.Children["Delivery"]);
    var toConfirmLabel = Html.Sitecore().Field("NextButtonLabel", Html.Sitecore().CurrentItem.Children["Billing"]);
    var placeOrderLabel = Html.Sitecore().Field("NextButtonLabel", Html.Sitecore().CurrentItem.Children["Confirm"]);
    var processing = @Html.Sitecore().CurrentItem["Processing Label"];
}
<div class="row m-t-1">
    <div id="btn-delivery-prev" class="col-md-6 chk-prev" style="display: none;">
        <a class="btn btn-lg btn-warning" href="/"><span class="glyphicon glyphicon-chevron-left"></span> @continueShoppingLabel</a>
    </div>
    <div id="btn-billing-prev" class="col-md-6 chk-prev" style="display: none;">
        <button id="BackToDeliveryButton" data-loading-text="@processing" onclick="switchingCheckoutStep('shipping')" class="btn btn-lg btn-warning"><span class="glyphicon glyphicon-chevron-left"></span> @backToDelivery</button>
    </div>
    <div id="btn-confirm-prev" class="col-md-6 chk-prev" style="display: none;">
        <button id="BackToBillingButton" data-loading-text="@processing" onclick="switchingCheckoutStep('billing')" class="btn btn-lg btn-warning"><span class="glyphicon glyphicon-chevron-left"></span> @backToBilling</button>
    </div>
    <div id="btn-delivery-next" class="col-md-6 text-right chk-next" style="display: none;">
        <button id="ToBillingButton" data-loading-text="@processing" onclick="switchingCheckoutStep('billing')" class="btn btn-lg btn-success" data-bind="enable: enableToBilling">@toBillingLabel <span class="glyphicon glyphicon-chevron-right"></span></button>
    </div>
    <div id="btn-billing-next" class="col-md-6 text-right chk-next" style="display: none;">
        <button id="ToConfirmButton" data-loading-text="@processing" onclick="submitCardPaymentAcceptPayment()" class="btn btn-lg btn-success" data-bind="enable: enableToConfirm">@toConfirmLabel <span class="glyphicon glyphicon-chevron-right"></span></button>
    </div>
    <div id="btn-confirm-next" class="col-md-6 text-right chk-next" style="display: none;">
        <button id="PlaceOrderButton" data-loading-text="@processing" onclick="submitOrder()" class="btn btn-lg btn-success">@placeOrderLabel <span class="glyphicon glyphicon-check"></span></button>
    </div>
</div>