@model Sitecore.Feature.Commerce.Orders.Models.OrderConfirmationViewModel

<div class="row">
    <div class="col-md-6 col-md-offset-3 col-xs-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">
                    @Html.Sitecore().Field("Order Information Label", Html.Sitecore().CurrentItem.Children["Order Confirmation"])
                </h3>
            </div>
            <div class="panel-body">
                <p class="order-number">
                    @Html.Sitecore().Field("Confirmation Number Label", Html.Sitecore().CurrentItem.Children["Order Confirmation"]): <strong>@Model.ConfirmationId</strong>
                </p>
                <p class="order-status">
                    @Html.Sitecore().Field("Status Label", Html.Sitecore().CurrentItem.Children["Order Confirmation"]): <strong>@Model.OrderStatus</strong>
                </p>
                <p>
                    @Html.Sitecore().Field("Email Sent Message", Html.Sitecore().CurrentItem.Children["Order Confirmation"])
                </p>
            </div>
        </div>
    </div>
</div>