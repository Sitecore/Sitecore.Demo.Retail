@{
    var orderTotalHeaderLabel = Html.Sitecore().Field("Order Total Header Label", Html.Sitecore().CurrentItem);
    var paymentTotalLabel = Html.Sitecore().Field("Payment Total Label", Html.Sitecore().CurrentItem);
    var vatLabel = Html.Sitecore().Field("VAT Label", Html.Sitecore().CurrentItem);
    var shippingLabel = Html.Sitecore().Field("shipping Label", Html.Sitecore().CurrentItem);
    var orderTotalLabel = Html.Sitecore().Field("Order Total Label", Html.Sitecore().CurrentItem);
    var totalSavingsLabel = Html.Sitecore().Field("Total Savings Label", Html.Sitecore().CurrentItem);
}

<div class="headline text-center">
    <h3>@orderTotalHeaderLabel</h3>
</div>
<table class="table table-striped">
    <tr>
        <td>@paymentTotalLabel</td>
        <td class="text-right"><strong data-bind="text: subTotal" pid="subtotal"></strong></td>
    </tr>
    <tr>
        <td>@vatLabel</td>
        <td class="text-right" data-bind="text: taxTotal" pid="taxTotal"></td>
    </tr>
    <tr>
        <td>@shippingLabel</td>
        <td class="text-right" data-bind="text: shippingTotal" pid="shippingTotal"></td>
    </tr>
    <tr>
        <td><strong>@orderTotalLabel</strong></td>
        <td class="text-right"><strong data-bind="text: total" pid="total"></strong></td>
    </tr>
    <tr>
        <td><em>@totalSavingsLabel</em></td>
        <td class="text-right">
            <em pid="discountTotal" data-bind="text: discount"></em>
        </td>
    </tr>
</table>