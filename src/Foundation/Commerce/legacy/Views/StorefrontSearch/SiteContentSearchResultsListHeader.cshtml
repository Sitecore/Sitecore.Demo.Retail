@model Sitecore.Reference.Storefront.Models.SiteContentListHeaderViewModel
@{
    if (Model?.Pagination == null || Model.Pagination.TotalResultCount <= 0)
    {
        return;
    }
    var item = Html.Sitecore().CurrentRendering.Item;
}

<div id="C04-ProductListHeader" class="row m-b-1">
    @{
        var headerText = item["Header"];
        if (!string.IsNullOrWhiteSpace(headerText))
        {
            <div class="col-md-12">
                <h2>@headerText</h2>
            </div>
        }

        <div class="col-md-12">
            <div class="row">
                <div class="col-md-4 col-sm-6 hidden-xs">
                    @if (Model.Pagination.NumberOfPages > 1)
                    {
                        <div class="showing-amount">
                            <h6>@Html.Sitecore().Field("Showing", item) <span id="C04-ProductListHeader-StartItem">@Model.Pagination.StartResultIndex</span> - <span id="C04-ProductListHeader-EndItem">@Model.Pagination.EndResultIndex</span> @Html.Sitecore().Field("Of", item) <span id="C04-ProductListHeader-TotalCount">@Model.Pagination.TotalResultCount</span></h6>
                        </div>
                    }
                </div>
                <div class="col-md-8 col-sm-6 col-xs-12 form-inline text-right">
                    @if (Model.Pagination.NumberOfPages > 1)
                    {
                        <div class="form-group">
                            <label for="resultsPerPageDropDown">@Html.Sitecore().Field("Results Per Page", item)</label>
                            <select id="resultsPerPageDropDown" class="form-control @Model.PageSizeClass">
                                @{
                                    var pageSizesString = item["Results Per Page Values"];

                                    if (!string.IsNullOrEmpty(pageSizesString))
                                    {
                                        var pageSizes = pageSizesString.Split('|');
                                        foreach (var size in pageSizes)
                                        {
                                            int pageSize;
                                            if (int.TryParse(size, out pageSize))
                                            {
                                                <option value="@pageSize" @if (Model.Pagination.PageResultCount == pageSize)
                                                                          {
                                                                              <text> selected </text>
                                                                          }>@pageSize</option>
                                            }
                                        }
                                    }
                                }
                            </select>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>