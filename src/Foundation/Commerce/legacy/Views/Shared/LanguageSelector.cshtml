@{
    var languages = Sitecore.Context.Database.GetItem("/sitecore/System/Languages");
    var currentLanguage = Sitecore.Context.Language;
}

@if (languages.Children.Count() > 1)
{
    <li class="dropdown">
        <a href="#" class="btn dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-globe"></i>
        </a>
        <ul class="dropdown-menu">
            @if (currentLanguage != null)
            {
                <li>
                    <strong>
                        @currentLanguage.GetDisplayName().Split(':')[1].TrimStart()
                    </strong>
                </li>
            }
            @foreach (Item language in languages.Children)
            {
                var lang = LanguageManager.GetLanguage(language.Name).CultureInfo.DisplayName;
                if (lang != currentLanguage.CultureInfo.DisplayName)
                {
                    var locLanguage = LanguageManager.GetLanguage(language.Name);
                    var dispName = locLanguage.GetDisplayName().Split(':')[1].TrimStart();
                <li>
                    <a id="languageButton-@language.Name" href="#" onclick="SwitchToLanguage('@language.Name', '@currentLanguage.Name')">@dispName</a>
                </li>
                }
            }
        </ul>
    </li>

    <script type="text/javascript">
        function SwitchToLanguage(language, currentLanguage) {
            AJAXPost("/api/storefront/shared/culturechosen",
                "{\"Culture\":\"" + language + "\"}",
                function(data, success, sender) {
                    var path = window.location.pathname.replace('/' + currentLanguage + '/', '');
                    path = (path.charAt(0) === "/") ? path : "/" + path;
                    var newpath = window.location.protocol +
                        '//' +
                        window.location.hostname +
                        "/" +
                        language +
                        path +
                        window.location.search;
                    window.location = newpath;
                });
        }
    </script>
}