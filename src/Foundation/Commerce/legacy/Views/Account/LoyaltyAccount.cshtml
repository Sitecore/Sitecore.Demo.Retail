@{
    var joiningLabel = @Html.Sitecore().Field("Joining Loyalty Program Button", Html.Sitecore().CurrentItem);
}

<div class="panel panel-default" id="recentOrdersSection">
    <div class="panel-heading">
        <h2 class="panel-title">
            <span class="glyphicon glyphicon-credit-card" aria-hidden="true"></span> @Html.Sitecore().Field("Loyalty Title", Html.Sitecore().CurrentItem)
        </h2>
        <div id="loyaltyCardsEmpty" data-bind="visible: isEmpty" style="display: none">
            <p>
                @Html.Sitecore().Field("Loyalty Empty Text", Html.Sitecore().CurrentItem)
            </p>
            <button type="button" class="btn btn-primary" id="joinLoyaltyProgram" data-loading-text="@joiningLabel" onclick="joinLoyaltyProgram() ">@Html.Sitecore().Field("Join Loyalty Program Button", Html.Sitecore().CurrentItem)</button>
        </div>
    </div>
    <div class="panel-body">
        <div data-bind="visible: showLoader" class="text-center">
            <span class="fa fa-spinner fa-pulse fa-3x"></span>
        </div>
    </div>
    <table class="table table-hover" id="loyaltyCards" style="display: none" data-bind="visible: isNotEmpty">
        <thead>
            <tr>
                <th width="90%">@Html.Sitecore().Field("Card Number Label", Html.Sitecore().CurrentItem)</th>
                <th width="10%">&nbsp;</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: orders">
            <tr data-bind="css: {'odd': $index() % 2 == 0}">
                <td><a href="@("/accountmanagement/loyaltycards")" data-bind="text: CardNumber"></a></td>
                <td><a href="@("/accountmanagement/loyaltycards")"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a></td>
            </tr>
        </tbody>
    </table>
    <div class="panel-footer" data-bind="visible: isNotEmpty" style="display: none">
        <a href="@("/accountmanagement/loyaltycards")" class="view-all btn btn-default">
            @Html.Sitecore().Field("View Details Label", Html.Sitecore().CurrentItem) <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        </a>
    </div>
</div>

<script type="text/javascript">
    initActiveLoyaltyCards("loyaltySection");
</script>
