@using Sitecore.Reference.Storefront.Models;
@model ProductSearchResultViewModel
@using System.Linq;
@{
    if (Model == null || Model.Products == null || !Model.Products.Any())
    {
        return;
    }
    var slides = (Model.Products.Count < 4 && Model.Products.Count > 1 ? Model.Products.Count : 4);
}

<div class="owl-carousel" data-options='{"items": @slides, "navigation": true, "navigationText": ["<", ">"], "autoPlay": false}'>
    @{
        foreach (ProductViewModel product in Model.Products)
        {
            @Html.Partial("~/Views/Storefront/Catalog/_ProductSummary.cshtml", product)
        }
    }
</div>

