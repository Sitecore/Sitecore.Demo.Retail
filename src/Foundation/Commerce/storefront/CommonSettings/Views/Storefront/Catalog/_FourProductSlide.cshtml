@using Sitecore.Reference.Storefront.Models;
@model ProductSearchResultViewModel
@using System.Linq;
@{
    if (Model == null || Model.Products == null || !Model.Products.Any())
    {
        return;
    }
}

<!-- Wrapper for slides -->
<div class="carousel-inner">
    @{

        for (int i = 0; i < Model.Products.Count; i += 4)
        {
            <div class="item@(i == 0 ? " active" : "")">
                <div class="row">
                    @foreach (ProductViewModel product in Model.Products.Skip(i).Take(4))
                    {
                        <div class="col-sm-3 col-xs-6">
                            @Html.Partial("~/Views/Storefront/Catalog/_ProductSummary.cshtml", product)
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>
