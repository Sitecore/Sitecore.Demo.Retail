@model Sitecore.Reference.Storefront.Models.RenderingModels.NavigationViewModel

@if (Model == null || Model.ChildCategories == null || !Model.ChildCategories.Any())
{
    return;
}

<div class="navbar-collapse collapse" id="siteNavbar">
    <ul class="nav navbar-nav">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle text-uppercase" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                Products (TO DO)<span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                @{
                    foreach (var category in Model.ChildCategories)
                    {
                        var cModel = new CategoryViewModel(category);
                        <li><a href="@cModel.GetLink()" itemid="@cModel.Item.ID.ToString()">@cModel.DisplayNameRender</a></li>
                    }
                }
            </ul>
        </li>
    </ul>

    <script type="text/javascript">
        if (currentCategory !== null) {
            var pathname = window.location.pathname;
            var item = $(".navbar-nav").find('a[itemid="' + currentCategory + '"]');
            if (item.length) {
                item.parent().addClass('active');
            }
        }
    </script>
</div>