@using Sitecore.Reference.Storefront.Managers
@model SearchBarModel
@{
    string searchPlaceholder = Html.Sitecore().CurrentItem["Search"];
}

<div id="B03-SearchBar" class="search-bar">
    <form action="~/search" method="get" id="SearchForm">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="@searchPlaceholder" name="@Sitecore.Reference.Storefront.StorefrontConstants.QueryStrings.SearchKeyword" value="@Model.SearchKeyword">
            <span class="input-group-btn">
                <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search"></span></button>
            </span>
        </div>
    </form>
</div>