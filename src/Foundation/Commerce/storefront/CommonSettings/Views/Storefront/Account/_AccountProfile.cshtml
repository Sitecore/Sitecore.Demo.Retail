@{
    var storefront = Sitecore.Reference.Storefront.Managers.StorefrontManager.CurrentStorefront;
    var email = string.IsNullOrEmpty(Sitecore.Context.User.Profile.Email) ? Sitecore.Context.User.Name : Sitecore.Context.User.Profile.Email;
}

@using Sitecore.Reference.Storefront.Managers;
<div class="col-md-12" id="accountProfile">
    <h2>@Html.Sitecore().Field("Account Profile Title", Html.Sitecore().CurrentItem)</h2>
    <div class="table-responsive">
        <table class="table table-hover small-list">
            <tr class="odd">
                <td><a href="@StorefrontManager.StorefrontUri("/accountmanagement/EditProfile")">@email</a></td>
                <td><a href="@StorefrontManager.StorefrontUri("/accountmanagement/EditProfile")"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
            </tr>
            @if(storefront.FormsAuthentication)
            { 
            <tr>
                <td><a href="@StorefrontManager.StorefrontUri("/accountmanagement/ChangePassword")"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> @Html.Sitecore().Field("Change Password Label", Html.Sitecore().CurrentItem)</a></td>
            </tr>
            }
        </table>
    </div>
</div>
