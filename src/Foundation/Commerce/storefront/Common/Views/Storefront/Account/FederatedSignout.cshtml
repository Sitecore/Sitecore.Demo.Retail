@model FederatedSignOutModel
@if (Model != null && Model.LogOffUri != null)
{
    <script type="text/javascript">
        window.open('@Model.LogOffUri', '', 'titlebar=no,toolbar=no,status=no,menubar=no,scrollbars=no,resizable=no,width=0,height=0,left=100000,top=100000');
    </script>
}

<div id="" class="row">
    <div class="col-md-6 ">
        <div class="row">
            <div class="col-md-12">
                @Html.Sitecore().Field(StorefrontConstants.KnownFieldNames.SignOutText, Html.Sitecore().CurrentItem)
            </div>
            <div class="col-md-12">
                <a href="/">@Html.Sitecore().Field(StorefrontConstants.KnownFieldNames.ContinueShoppingText, Html.Sitecore().CurrentItem)</a>
            </div>
        </div>
    </div>
</div>