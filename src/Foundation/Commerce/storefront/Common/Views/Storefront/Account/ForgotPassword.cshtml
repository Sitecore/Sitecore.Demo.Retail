@using Sitecore.Foundation.Commerce.Managers;
@{
    var submitting = @Html.Sitecore().CurrentItem["Submitting"];
    var emailLabel = @Html.Sitecore().Field("Email", Html.Sitecore().CurrentItem);
    var emailLabelPlaceholder = @Html.Sitecore().CurrentItem["Email"];
    var storefront = StorefrontManager.CurrentStorefront;
}

@using (Ajax.BeginForm("ForgotPassword", "Account", null, new AjaxOptions { OnBegin = "SetForgotPasswordProcessingButton", OnSuccess = "ForgotPasswordSuccess", OnFailure = "ForgotPasswordFailure", HttpMethod = "Post" }, new { @id = "ForgotPasswordForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        <!-- CONTENT CONTAINER -->
    if (storefront.FormsAuthentication)
    {
        <div class="form-group">
            <p class="help-block">
                @Html.Sitecore().Field("Fill Form Message", Html.Sitecore().CurrentItem)
            </p>
            <label for="Email">@emailLabel <span class="required">*</span> </label>
            <input id="Email" class="form-control input-validation-error" type="email" value="" name="Email" placeholder="@emailLabelPlaceholder">
            <span class="field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <button type="submit" id="forgotPasswordButton" data-loading-text="@submitting" class="btn btn-primary btn-lg btn-block">@Html.Sitecore().Field("Submit", Html.Sitecore().CurrentItem)</button>
            </div>
            <div class="col-lg-6">
                <a class="btn btn-default btn-lg btn-block" href="@StorefrontManager.StorefrontUri("/Login")">@Html.Sitecore().Field("Cancel", Html.Sitecore().CurrentItem)</a>
            </div>
        </div>
    }
}